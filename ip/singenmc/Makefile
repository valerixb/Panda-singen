ECHO=@echo

HDL_WS  	:= .
HDL_SRC 	:= src
PRO_GEN_TCL := ProjectGeneration.tcl

help::
	$(ECHO) "Makefile Usage:"
	$(ECHO) "  make gen_srcs "
	$(ECHO) "  Command to generate HDL sources "
	$(ECHO) ""
	$(ECHO) "  make clean"
	$(ECHO) "      Command to remove all the generated files."

.PHONY: help clean all

all:

# Adding allx86 target with no action as running x86 simulator is not needed for HDL
allx86:

gen_srcs:
	cd ${HDL_SRC} && vivado -mode batch -notrace -source ${PRO_GEN_TCL}

clean:
	@echo "deleting all output folders and files"
	ls -a -I . -I .. -I Makefile -I data -I src | xargs -i rm -rf {}
